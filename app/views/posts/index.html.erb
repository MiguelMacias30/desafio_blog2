<h1 class="display-4 text-center">Productos en mi Blog</h1>

<table class="table table-dark table-bordered w-50 container">
  <tr class="bg-danger">
    <th>titulo</th>
    <th>contenido</th>
    <th>imagen</th>
  </tr>
  <%@posts.each do |pos|%>
  <tr>
    <td><%=pos.title%></td>
    <td><%=pos.content%></td>
    <td><%=pos.image_url%></td>
  </tr>
  <% end %>
</table>
